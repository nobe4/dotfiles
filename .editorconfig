[*]

indent_style = tab
indent_size = 4
tab_width = 4
trim_trailing_whitespace = true
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.lua]

quote_style = double
table_separator_style = none
trailing_table_separator = smart
continuation_indent_size = 8
align_call_args = true

[*.py]

indent_style = space

[*.nix]
# conform to nixd
indent_style = space
indent_size = 2
