# vi:ft=gitconfig
[user]
	# default user
	name = nobe4
	email = nobe4@github.com
	signingKey = A4EAFCF8BCEF0D15
	# Pro signingKey = 58B1CDD15450346A40DF8564DD534FFD2E54CAF3
[commit]
	gpgsign = true
[core]
	editor = vim
	excludesFile = $HOME/.gitignore_global
[alias]
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	me = !git-me
	standup = !git-standup
	oops = !git commit -a --fixup=HEAD && GIT_EDITOR=true git rebase -i --autosquash HEAD~2
	safe-pull = !git-safe-pull
	clean-branches = "!echo 'use git-clean-branches'"
	recent-branches = branch --sort=-committerdate --format="%(committerdate:relative)%09%(refname:short)"
[pull]
	default = current
	rebase = false
[push]
	default = current
[github]
	user = nobe4
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[gpg]
	program = gpg
