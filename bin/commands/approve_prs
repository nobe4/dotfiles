#!/usr/bin/env bash
#/ Usage: approve_prs [URL[ URL]+]
#/
#/ Approve the PRs.
#/
#/ Requirements:
#/  - pbpaste
#/  - gh - https://cli.github.com/

set -e

show_help() { grep ^#/ <"${0}" |cut -c4- | envsubst ; }
[[ "$*" == "-h" ]] && show_help && exit 0

echo "${*:-"$(get_pr "Enter PR URL(s) to approve:")"}" \
	| xargs -n1 gh pr review --approve
