#!/usr/bin/env bash
#VERSION 0.0.1
#/ Usage: note [FLAG] [COMMAND] [ARGUMENT]
#/
#/ This is a base bash script with as many niceties included as possible.
#/ See comments below for each parts.
#/
#/ Flags:
#/   -h|--help                Show this help
#/   -v|--version             Show the version
#/   -O|--no-open             Don't open the note after search
#/
#/ Commands (current: ${COMMAND}):
#/   n|new     [TITLE]        Create a new note (current title: ${TITLE})
#/   s|search                 Search for a note
#/   p|path                   Show notes path
#/

set -e

show_help() {
	export COMMAND TITLE
	grep ^#/ <"${0}" |cut -c4- | envsubst
}

show_version(){ grep ^#VERSION <"${0}" |cut -d' ' -f2; }

ROOT="${DOTFILE_FOLDER}/private/notes"
COMMAND="new"
TITLE="$(date +%F)"
OPEN=1

while [ "${#}" -gt 0 ]; do
	case "${1}" in
		-h|--help) show_help && exit 0 ;;
		-v|--version) show_version && exit 0 ;;
		-O|--no-open) OPEN=0 ;;
		-*)
			echo "Unknown flag '${1}'"
			show_help
			exit 1
			;;

		# Break on non-flags
		*)  break ;;
	esac
	shift 1
done

COMMAND="${1:-"${COMMAND}"}"

shift 1 || true
ARGUMENT="${*:-"${ARGUMENT}"}"

# Parse command
case "${COMMAND}" in
	n|new)
		FILE="${ROOT}/${TITLE}.md"
		echo "${ARGUMENT}" >> "${FILE}"
		"${EDITOR}" "${FILE}"
		;;
	s|search)
		selection="$(cd "${ROOT}" && rg --line-number . | fzf --print0 --delimiter : --preview "cat ${ROOT}/{1}" --preview-window "up,+{2}-/2")"
		file="${ROOT}/$(echo "${selection}" | cut -d: -f1)"
		line="$(echo "${selection}" | cut -d: -f2)"

		if [[ "${OPEN}" == 1 ]]; then
			"${EDITOR}" "${file}" "+${line}"
		else
			echo "Found in $file at line $line"
		fi
		;;
	p|path) echo "${ROOT}" ;;
	*)
		echo "Unknown command '${COMMAND}'"
		show_help
		exit 1
		;;
esac
