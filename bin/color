#!/usr/bin/env ruby
# frozen_string_literal: true

# Extend the string class for color rendering
class String
  def green
    "\e[32m#{self}\e[0m"
  end

  def yellow
    "\e[33m#{self}\e[0m"
  end

  def red
    "\e[31m#{self}\e[0m"
  end

  def blue
    "\e[36m#{self}\e[0m"
  end
end

# puts 'TODO' if __FILE__ == $PROGRAM_NAME
