#!/usr/bin/env bash
#/ Usage: requestbin [PORT]
#/
#/ Open netcat on PORT (default 8080).
set -e


show_help() { grep ^#/ <"${0}" |cut -c4- ;}
[[ "$*" == "-h" ]] && show_help && exit 0

PORT="${1:-8080}"

trap ctrl_c INT

function ctrl_c() {
	exit 0
}

echo -e "Listening on :$PORT\n"

while true; do
	echo -e "HTTP/1.1 200 OK\r\n" | nc -v -l -p "$PORT"
	echo -e "\n\n---\n"
done

