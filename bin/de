#!/usr/bin/env bash
#/ usage: de

set -e

[ "$*" == "-h" ] && cat "${0}" && exit 0

setup_ruby_rbenv(){ echo "use rbenv" >> .envrc && direnv allow; }
setup_node_nodenv(){ echo "use nodenv" >> .envrc && direnv allow; }

functions="
ruby rbenv
node nodenv
"

choice=$(echo "${functions}" | grep -v "^$" | fzf | tr ' ' '_')
"setup_${choice}"
