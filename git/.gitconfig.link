# vi:ft=gitconfig

[user]
  # default user
  name = XXX
  email = XXX
[core]
  # use vim, damn
  editor = vim
  excludesFile = $HOME/.gitignore_global
[alias]
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  me = !git-me
  standup = !git-standup
  oops = rebase -i HEAD~2
[pull]
  default = current
[push]
  default = current
[github]
  user = XXX
